<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".QuizzResults">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/completedQuizz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Chúc mừng bạn đã hoàn thành!"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/successTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/completedQuizz"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_back_blue20"
            android:text="Số câu trả lời đúng: 0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inCorrectAnswer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_back_blue20"
            android:text="Số câu trả lời sai: 0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/shareSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_alignParentBottom="true"
        android:drawableTop="@drawable/ic_baseline_share_24"
        android:drawablePadding="-15sp"
        android:gravity="center"
        android:paddingTop="10sp"
        android:layout_marginBottom="100dp"
        android:text="Chia sẻ"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/startNewQuizz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:background="@drawable/round_back_blue20"
        android:backgroundTint="@color/blue_800"
        android:text="Làm Quizz mới"
        android:textStyle="bold" />

</RelativeLayout>