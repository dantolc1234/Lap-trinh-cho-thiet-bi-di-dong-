<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_quizz2"
    tools:context=".QuizzResults">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/completedQuizz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Bạn đã hoàn thành Quizz"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_below="@id/completedQuizz"
        android:id="@+id/successTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correctAnswer"
            android:text="Số câu trả lời đúng: 0"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/inCorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu trả lời sai: 0"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/shareSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chia sẻ thành tích"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:id="@+id/startNewQuizz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Làm Quizz mới"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

</RelativeLayout>